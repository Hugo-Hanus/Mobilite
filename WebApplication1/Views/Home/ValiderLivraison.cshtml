@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [Authorize(Roles = "Chauffeur")]
@{
    Layout = "_Layout";  
ViewData["Title"] = "Valider la Livraison";
}
<div class="container">
    <h1 class="display-4 me-4">Valider la Livraison XX:</h1>
    <h2>Livraison XX</h2>
    <form>
        <div class="mb-3">
            <label for="dateChargementEf" class="form-label">Date de Chargement effectuée</label>
            <input type="datetime-local" class="form-control" id="dateChargementEf" pattern="^([1-9]|([012][0-9])|(3[01]))\/([0]{0,1}[1-9]|1[012])\/\d\d\d\d\s-\s([0-1]?[0-9]|2?[0-3]):([0-5]\d)$">
        </div>
        <div class="mb-3">
            <label for="commentaire" class="form-label">Commentaire</label>
            <textarea class="form-control" id="commentaire" rows="3"></textarea>
        </div>
        <button class="btn btn-primary " type="submit">Valider la Livraison</button>
    </form>
</div>