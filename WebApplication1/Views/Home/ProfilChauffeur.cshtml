@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Chauffeur")]
@model Chauffeur
@{
    Layout = "_Layout";  
    ViewData["Title"] = "Profil d'un chauffeur";
}

<div class="container">
    <h1 class="display-4">Profil - Chauffeur:</h1>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="ModificationChauffeur">Modifier</a>
    <div class="form-group mb-3">
        <label for="nom">Nom</label>
        <input asp-for="Nom" type="text" class="form-control" id="nom" readonly name="nom">
    </div>
    <div class="form-group mb-3">
            <label for="prenom">Prénom</label>
        <input asp-for="Prenom" type="text" class="form-control" id="prenom" readonly name="prenom">
        </div>
    
    <div class="form-group mb-3">
        <label for="email">Adresse Mail</label>
        <input asp-for="Email" type="email" class="form-control" id="mail" readonly name="email">
    </div>
    <div class="form-group mb-3">
        <label for="matricule">Matricule</label>
        <input asp-for="Matricule" type="text" class="form-control" id="matricule" readonly name="matricule">
    </div>
     <label class="form-check-label">Permis</label>
            <div><input class="form-check-input" name="divName" type="checkbox" value="B" id="permis" @(Model.PermisB ? "checked" : "")><label class="form-check-label ms-3" for="permis">Permis B</label></div>
            <div><input class="form-check-input" name="divName" type="checkbox" value="C" id="permis" @(Model.PermisC ? "checked" : "")><label class="form-check-label ms-3" for="permis">Permis C</label></div>
            <div><input class="form-check-input" name="divName" type="checkbox" value="CE" id="permis" @(Model.PermisCE ? "checked" : "")><label class="form-check-label ms-3" for="permis">Permis CE</label></div>
             
    <div class="form-group mb-3">
            <label for="dateNaissance">Date de naissance</label>
        <input asp-for="DateNaissance" type="text" class="form-control" id="dateNaissance" readonly name="dateNaissance">
        </div>
        
            @{
                if (!string.IsNullOrWhiteSpace(Model.PhotoProfil))
                {
                    <label for="logo">Photo de profil</label>
                    <img src="@Url.Content(Model.PhotoProfil)" alt="Logo entreprise" width="=100" height="100"/>
                }
                else
                {
                    <label for="logo">Aucune photo enregistrée</label>

                }
            }
    </div>