@{
    Layout = "_Layout";     
    ViewData["Title"] = "Home Page";
    @model List<Client>
}

<div class="container text-center">
    <h1 class="display-4">HELMo-bilité</h1>
    <article class="card flex-row mb-4">
        <img src="img/pexels-quintin-gellar-2199293.jpg" width="400" height="300" alt="flotte-camion">
        <div class="card-body d-flex flex-column align-items-start justify-content-center">
            <h3 class="card-title ">Notre Flotte</h3>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
    </article>
    <article class="card flex-row-reverse mb-4">
        <img src="img/pexels-august-de-richelieu-4427430.jpg" width="400" height="300" alt="flotte-camion">
        <div class="card-body d-flex flex-column align-items-end justify-content-center">
            <h3 class="card-title ">Notre Équipe</h3>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
    </article>
    <article class="text-center">
        <h3 class="card-title ">Nos Partenaires</h3>
        @await Html.PartialAsync("ListElements/_AllLogoClient", Model)
        <img class="m-2" src="img/logo/cod-lab.png" width="100" height="100" alt="logoCodLab"/>
    </article>
</div>
