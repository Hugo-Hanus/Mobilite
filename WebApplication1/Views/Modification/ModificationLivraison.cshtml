@{
    Layout = "_Layout";  
    ViewData["Title"] = "Modicication d'une Livraison";
    string livraison = "Livraison";
}
<div class="container">
    <h1 class="display-4 me-4">Modification d'une Livraison: @livraison</h1>
    <form>
        <div class="mb-3">
            <label for="lieuChargement" class="form-label">Lieu de Chargement</label>
            <textarea class="form-control" id="lieuChargment" rows="3" aria-valuetext="@livraison"></textarea>
        </div>
        <div class="mb-3">
            <label for="dateChargement" class="form-label">Date de Chargement</label>
            <input type="datetime" class="form-control" id="dateChargement" value ="@livraison" pattern="^([1-9]|([012][0-9])|(3[01]))\/([0]{0,1}[1-9]|1[012])\/\d\d\d\d\s-\s([0-1]?[0-9]|2?[0-3]):([0-5]\d)$">
        </div>
        <div class="mb-3">
            <label for="lieuDechargement" class="form-label">Lieu de Déchargement</label>
            <textarea class="form-control" id="lieuDechargement" value ="@livraison" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="dateDechargement" class="form-label">Date de Déchargement</label>
            <input type="datetime" class="form-control" id="dateDechargement" value ="@livraison" pattern="^([1-9]|([012][0-9])|(3[01]))\/([0]{0,1}[1-9]|1[012])\/\d\d\d\d\s-\s([0-1]?[0-9]|2?[0-3]):([0-5]\d)$">
        </div>
        <div class="mb-3">
            <label for="contenu" class="form-label">Contenu</label>
            <textarea class="form-control" id="contenu" value ="@livraison" rows="7"></textarea>
        </div>
        <button class="btn btn-primary " type="submit">Valider la Livraison</button>
    </form>
</div>

